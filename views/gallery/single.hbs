<div class = "photoContainer">
  <div class="authors-descriptions-single">
    <p>{{image.author}} - </p>
    <p>{{image.link}}</p>  
  </div>
  <a href="{{image.link}}">
    <img src="{{image.link}}" class="photo">
  </a>
  <div class="description">{{image.description}}</div>
  <form action="/gallery/{{image.id}}?_method=DELETE" method="POST" >
    <button class="submit" id="delete" type="submit">Delete</button>
  </form>
  <form action="/gallery/{{image.id}}/edit?_method=GET" method="POST">
    <button class="submit" id="edit" type="submit">Edit</button>
  </form>
  <form action="../?_method=GET" method="POST">
  <button class="submit" id="backBtn" type="submit">Like go back to Gallery, ya?</button>
  </form>

</div>