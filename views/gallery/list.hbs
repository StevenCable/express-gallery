<div class = "mainGallery">
{{#each images}}
<div class="photoContainer">
  <a href="{{link}}">
    <img src="{{link}}" class="photo">
  </a>
  <br>
  <div class="authors-descriptions">
    {{description}} - {{author}}
  </div> 
  <br>
</div>

<form method="POST" action="/{{id}}?_method=DELETE" >
  <input type="submit" value="delete">
</form>
<form action="/gallery/{{id}}/edit?_method=GET" method="POST">
  <input type="submit" value="edit">
</form>
<br>

{{/each}}
</div>