{{#if username}}
<div id="top-menu">
  <div class="welcome">
    Welcome {{username}}
  </div>
  <form action="/logout" method="POST">
    <button id="log-out">
      Log Out
    </button>
  </form>
</div>
{{/if}}
<form action="./?_method=PUT" method="POST">
  <a href="./" class="photoLink">
    <img src="{{image.link}}" class="photo">
  </a> <br>
  <div id="author">
    Author:
  </div>
  <input type="text" value="{{image.author}}" name="author" /> <br>
  <div id="url">
    URL:
  </div>
  <input type="text" value="{{image.link}}" name="link" /> <br>
  <div id="description">
    Description:
  </div>
  <textarea name="description" rows="10" cols="40" id="edit-description">{{image.description}}</textarea><br>
  <input type="submit" value="Post Update" class ="input-btn">
</form>